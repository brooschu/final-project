<h1>
  Type list
</h1>

<a href="/new_type_form">
  Add a new type
</a>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Name
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @types.each do |type| %>
  <tr>
    <td>
      <%= type.id %>
    </td>

    <td>
      <%= type.name %>
    </td>

    <td>
      <%= time_ago_in_words(type.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(type.updated_at) %> ago
    </td>

    <td>
      <a href="/types/<%= type.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
