<h1>
  Add a new review
</h1>

<hr>

<%= render("review_templates/validation_failures.html.erb") %>

<form action="/insert_review_record" method="post">
  <div>
    <label for="whiskey_name">
      Whiskey name
    </label>

    <input type="text" id="whiskey_name" name="whiskey_name" value="<%= @review.whiskey_name %>">
  </div>

  <div>
    <label for="rating">
      Rating (1-5)
    </label>

    <input type="text" id="rating" name="rating" value="<%= @review.rating %>">
  </div>

  <div>
    <label for="review">
      Review
    </label>

    <textarea id="review" name="review"><%= @review.review %></textarea>
  </div>

  <input type="hidden" name="whiskey_entry_id" value="<%= @review.whiskey_entry_id %>">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <button>
    Post review
  </button>
</form>

<hr>

<a href="/reviews">
  Go back
</a>
